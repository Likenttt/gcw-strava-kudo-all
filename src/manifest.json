{
    "manifest_version": 3,
    "name": "__MSG_AppName__",
    "version": "1.2.2",
    "description": "__MSG_AppDescription__",
    "default_locale": "en_US",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "host_permissions": [
        "*://connect.garmin.com/app/*",
        "*://connect.garmin.com/modern/*",
        "*://connect.garmin.cn/app/*",
        "*://connect.garmin.cn/modern/*",
        "*://connectus.garmin.cn/app/*",
        "*://connectus.garmin.cn/modern/*",
        "*://*.strava.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://connect.garmin.com/app/*",
                "*://connect.garmin.com/modern/*",
                "*://connect.garmin.cn/app/*",
                "*://connect.garmin.cn/modern/*",
                "*://connectus.garmin.cn/app/*",
                "*://connectus.garmin.cn/modern/*",
                "*://*.strava.com/*"
            ],
            "js": [ "kudoall.js" ],
            "run_at": "document_idle"
        }
    ],

    "action": {
        "default_title": "__MSG_AppName__",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}